<%= simple_form_for(@work_experience, html: { class: 'work-experience-form' }) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <%= f.input :title %>
  </div>

  <div class="field">
    <%= f.input :company %>
  </div>

  <div class="field">
    <%= f.input :description %>
  </div>

  <div class="field">
    <%= f.label :start_date %>
    <%= f.date_field :start_date, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :end_date %>
    <%= f.date_field :end_date, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn" %>
  </div>
<% end %>
