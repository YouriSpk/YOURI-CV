<link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet'>

<body>
  <!-- Bannière avec superposition du h1 -->
  <div class="banner position-relative d-flex justify-content-center align-items-center mb-4">
    <img src="https://images.unsplash.com/photo-1614854262204-ac42b8c25c0e?q=80&w=3870&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="work experiences banner">
    <h1 class="text-white position-absolute bottom-0 start-50 translate-middle-x mb-4">WORK EXPERIENCES</h1>
  </div>

  <div class="container">
  <div class="row">
    <% @work_experiences.each do |experience| %>
      <div class="col-12">
        <div class="card text-center">
          <div class="card-body">
            <div class="skill-details">
              <h5 class="card-title"><%= experience.title %></h5>
              <p>@<%= experience.company %></p>
              <p>
                From
                <span><%= experience.start_date.strftime('%d %B %Y') %></span>
                to
                <span><%= experience.end_date ? experience.end_date.strftime('%d %B %Y') : 'Présent' %></span>
              </p>
              <%= link_to "Details", experience, class: "btn" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
      <% if user_signed_in? %>
      <%= link_to "Add +1", new_work_experience_path, class: "btn" %>
    <% end %>
</div>



</body>

<style>
  .banner {
    overflow: hidden;
    position: relative;
    height: 400px; /* Hauteur de la bannière */
    width: 100%; /* Largeur de la bannière */
  }

  .banner img {
    object-fit: cover;
    height: 100%;
    width: 100%;
  }

  .banner h1 {
    position: absolute;
    top: 50%; /* Centrage vertical */
    left: 50%; /* Centrage horizontal */
    transform: translate(-50%, -50%); /* Ajustement pour centrer parfaitement */
    z-index: 1;
    color: white;
    font-family: "Cutive Mono", serif;
    font-size: 70px;
  }
</style>
