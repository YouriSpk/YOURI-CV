<body>
  <!-- Bannière avec superposition du h1 -->
  <div class="banner position-relative d-flex justify-content-center align-items-center mb-4">
    <img src="https://images.unsplash.com/photo-1579548122080-c35fd6820ecb?q=80&w=3870&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="work experience banner">
    <h1 class="text-white position-absolute bottom-0 start-50 translate-middle-x mb-4">WORK DETAILS</h1>
  </div>

  <div class="container d-flex justify-content-center align-items-center">
    <div class="card w-75">
      <div class="card-body text-center">
        <dl>
          <dt>Titre :</dt>
          <dd><%= @work_experience.title %></dd>

          <dt>Entreprise :</dt>
          <dd><%= @work_experience.company %></dd>

          <dt>Description :</dt>
          <dd><%= @work_experience.description %></dd>

          <dt>Date de début :</dt>
          <dd><%= @work_experience.start_date %></dd>

          <dt>Date de fin :</dt>
          <dd><%= @work_experience.end_date %></dd>
        </dl>

        <div class="text-center mt-3">
          <%= link_to "Modifier", edit_work_experience_path(@work_experience), class: "btn btn-primary btn-sm mr-2" %>
          <%= link_to "Supprimer", @work_experience, method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer cette expérience professionnelle ?" }, class: "btn btn-danger btn-sm mr-2" %>
          <%= link_to "Retour à la liste des expériences professionnelles", work_experiences_path, class: "btn btn-secondary btn-sm" %>
        </div>
      </div>
    </div>
  </div>
</body>

<style>
  .banner {
    overflow: hidden;
    position: relative;
    height: 300px; /* Hauteur de la bannière */
    width: 100%; /* Largeur de la bannière */
  }

  .banner img {
    object-fit: cover;
    height: 100%;
    width: 100%;
  }

  h1.position-absolute {
    z-index: 1;
  }
</style>
