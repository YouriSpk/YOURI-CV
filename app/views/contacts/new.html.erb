<div class="contact" style="margin-top: 70px;">
  <div id="container-form">
    <h2>Contact</h2>
    <%= form_with scope: :contact_form, url: contacts_path, method: :post, local: true, class: "container" do |form| %>

      <div class="form-group row">
        <div class="col-md-4">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control", id: "name_input", required: true %>
        </div>

        <div class="col-md-4">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, class: "form-control", id: "last_name_input", required: true %>
        </div>

        <div class="col-md-4 form-group">
          <%= form.label :email %>
          <%= form.email_field :email, class: "form-control", id: "email_input", required: true %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :message %>
        <%= form.text_area :message, class: "form-control", id: "message_input", required: true, rows: 5 %>
      </div>

      <%= form.submit "Submit", class: "btn", id: "form_button" %>

    <% end %>
  </div>
</div>

<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>
