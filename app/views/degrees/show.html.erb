<body>
  <!-- Bannière avec superposition du h1 -->
  <div class="banner position-relative mb-4">
    <img src="https://images.unsplash.com/photo-1579547621869-0ddb5f237392?q=80&w=3870&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="degree banner">
    <h1 class="text-white position-absolute bottom-0 start-50 translate-middle-x mb-4">DEGREE DETAILS</h1>
  </div>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card text-center">
          <div class="card-body">
            <h1 class="text-center mb-4"><%= @degree.degree %></h1>

            <dl class="mb-4">
              <dt>Institution:</dt>
              <dd><%= @degree.institution %></dd>

              <dt>Diplôme:</dt>
              <dd><%= @degree.degree %></dd>

              <dt>From:</dt>
              <dd class="d-inline-block mr-2"><%= @degree.start_date.strftime('%d %B %Y') %></dd>
              <dd class="d-inline-block">to <%= @degree.end_date ? @degree.end_date.strftime('%d %B %Y') : 'Présent' %></dd>
            </dl>

            <div class="text-center mt-3">
              <%= link_to "Modifier", edit_degree_path(@degree), class: "btn btn-primary btn-sm mr-2" %>
              <%= link_to "Supprimer", @degree, method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer ce diplôme ?" }, class: "btn btn-danger btn-sm mr-2" %>
              <%= link_to "Retour à la liste des diplômes", degrees_path, class: "btn btn-secondary btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

<style>
  .banner {
    overflow: hidden;
    position: relative;
    height: 400px; /* Hauteur de la bannière */
    width: 100%; /* Largeur de la bannière */
  }

  .banner img {
    object-fit: cover;
    height: 100%;
    width: 100%;
  }

  .banner h1 {
    position: absolute;
    top: 50%; /* Centrage vertical */
    left: 50%; /* Centrage horizontal */
    transform: translate(-50%, -50%); /* Ajustement pour centrer parfaitement */
    z-index: 1;
    color: white;
    font-family: "Cutive Mono", serif;
    font-size: 70px;
  }
</style>
