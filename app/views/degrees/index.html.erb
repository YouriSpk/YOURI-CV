<body>
  <!-- Bannière avec superposition du h1 -->
  <div class="banner position-relative mb-4">
    <img src="https://images.unsplash.com/photo-1579547621869-0ddb5f237392?q=80&w=3870&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="degree banner">
    <h1 class="text-white position-absolute bottom-0 start-50 translate-middle-x mb-4">DEGREES</h1>
  </div>

  <div class="container">
    <% @degrees.each do |degree| %>
      <div class="row mb-4">
        <div class="col-12">
          <div class="card text-center">
            <div class="card-body">
              <div class="skill-details">
                <h5 class="card-title"><b><%= degree.degree %></b></h5>
                <p>@<%= degree.institution %></p>
                <p>From <%= degree.start_date.strftime('%d %B %Y') %> to <%= degree.end_date ? degree.end_date.strftime('%d %B %Y') : 'Présent' %></p>
                <%= link_to "Details", degree, class: "btn" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <% if user_signed_in? %> <!-- Vérifie si un utilisateur est connecté -->
      <%= link_to "Add +1", new_degree_path, class: "btn" %>
    <% end %>
  </div>
</body>

<style>
  .banner {
    overflow: hidden;
    position: relative;
    height: 400px; /* Hauteur de la bannière */
    width: 100%; /* Largeur de la bannière */
  }

  .banner img {
    object-fit: cover;
    height: 100%;
    width: 100%;
  }

  .banner h1 {
    position: absolute;
    top: 50%; /* Centrage vertical */
    left: 50%; /* Centrage horizontal */
    transform: translate(-50%, -50%); /* Ajustement pour centrer parfaitement */
    z-index: 1;
    color: white;
    font-family: "Cutive Mono", serif;
    font-size: 70px;
  }

@media (max-width: 768px) {

    .banner h1 {
    font-size: 30px;
  }
}
</style>
