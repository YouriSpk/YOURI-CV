<%= simple_form_for(@skill, html: { class: 'skill-form' }) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <%= f.input :name %>
  </div>

  <div class="field">
    <%= f.label :level %>
    <%= f.collection_select :level, ['beginner', 'intermediate', 'advanced', 'expert'], :itself, :capitalize, {}, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :section %>
    <%= f.collection_select :section, ['soft', 'hard'], :itself, :capitalize, {}, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
