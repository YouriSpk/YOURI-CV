<html>
  <head>
    <title>SKILLS</title>
  </head>
  <body>
  <div class="container">
    <h1>SKILLS</h1>
    <div class="row">
      <% @skills.each do |skill| %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= link_to skill.name, skill %></h5>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= link_to "Add a new skill", new_skill_path, class: "btn btn-primary" %>
  </div>
</body>
</html>
